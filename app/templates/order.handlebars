<h1>Confirmation for your order:</h1>
<div class='row'>
  <div class='col-lg-8'>
    <table class='table table-hover'>
      <thead>
        <th>Order Number</th>
        <th>Customer</th>
        <th>Email</th>
        <th>Status</th>
      </thead>
      <tbody>
          <tr>
            <td>
              {{ id }}
            </td>
            <td>
              {{ customer_name }}
            </td>
            <td>
              {{ email }}
            </td>
            <td>
              {{ status }}
            </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
