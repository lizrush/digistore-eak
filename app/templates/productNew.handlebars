<h3>New Product:</h3>
<form class="form-horizontal" role="form">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name:</label>
    <div class="col-sm-10">
      {{ input value=name }}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">Price, in cents:</label>
    <div class="col-sm-10">
      {{ input type="number" value=price }}
    </div>
  </div>
   <div class="form-group">
    <label class="col-sm-2 control-label">Image url:</label>
    <div class="col-sm-10">
      {{ textarea value=image rows=1 cols=50}}
    </div>
  </div>
   <div class="form-group">
    <label class="col-sm-2 control-label">Thumbnail url:</label>
    <div class="col-sm-10">
      {{ textarea value=avatar rows=1 cols=50 }}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description:</label>
    <div class="col-sm-10">
      {{ textarea value=description rows=10 cols=50 }}
      <br>
      <br>
      <button {{ action "createProduct" this }} class="btn btn-primary">Save!</button>
    </div>
  </div>
</form>
